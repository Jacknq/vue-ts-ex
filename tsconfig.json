{
  "compilerOptions": {       
    "target": "es5", 
    "module": "es2015", 
     "lib": [
      "dom","es2015",
      "es5","es6", "esnext",
      "es2015.promise", "es2015.iterable","dom.iterable"
    ],
    "allowSyntheticDefaultImports": true, "moduleResolution": "node", 
    "sourceMap": true, "experimentalDecorators": true
   , "noImplicitAny": false,    
    "strict": false,   
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true
  },
  "exclude": [
    "./node_modules"
],
  "compileOnSave": false
}